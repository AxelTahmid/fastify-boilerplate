{
    "name": "fastifystarter",
    "version": "1.0.0",
    "description": "This is a starter template for fastify",
    "main": "server.js",
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=20.0.0"
    },
    "packageManager": "yarn@4.2.2",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "tsx src/server.ts",
        "dev": "tsx watch src/server.ts",
        "gen-cert": "cd src/certs/ && bash generate.sh",
        "make-seeder": "knex seed:make --knexfile=./src/database/knexfile.js",
        "make-migration": "knex migrate:make --knexfile=./src/database/knexfile.js",
        "db-refresh": "bash ./src/database/database.sh",
        "db-migrate": "knex migrate:latest --knexfile=./src/database/knexfile.js --verbose",
        "db-seed": "knex seed:run --knexfile=./src/database/knexfile.js --verbose",
        "db-rollback": "knex migrate:rollback --knexfile=./src/database/knexfile --verbose",
        "update-deps": "yarn upgrade-interactive",
        "check": "biome check .",
        "format": "biome check --apply .",
        "format-staged": "yarn biome check --staged --apply .",
        "prepare": "husky"
    },
    "author": "AxelTahmid",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.577.0",
        "@fastify/cors": "^9.0.1",
        "@fastify/formbody": "^7.4.0",
        "@fastify/helmet": "^11.1.1",
        "@fastify/jwt": "^8.0.1",
        "@fastify/multipart": "^8.2.0",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/sensible": "^5.6.0",
        "@fastify/under-pressure": "^8.3.0",
        "bcryptjs": "^2.4.3",
        "bullmq": "^5.7.10",
        "close-with-grace": "^1.3.0",
        "dotenv": "^16.4.5",
        "fastify": "^4.27.0",
        "fastify-plugin": "^4.5.1",
        "fluent-json-schema": "^4.2.1",
        "ioredis": "^5.4.1",
        "knex": "^3.1.0",
        "nodemailer": "^6.9.13",
        "ofetch": "^1.3.4",
        "pg": "^8.11.5"
    },
    "devDependencies": {
        "@biomejs/biome": "1.7.3",
        "@types/dotenv": "^8.2.0",
        "@types/node": "^20.12.12",
        "fastify-tsconfig": "^2.0.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.4",
        "nodemon": "^3.1.0",
        "pino-pretty": "^11.0.0",
        "tsx": "^4.10.5",
        "typescript": "^5.4.5"
    }
}
